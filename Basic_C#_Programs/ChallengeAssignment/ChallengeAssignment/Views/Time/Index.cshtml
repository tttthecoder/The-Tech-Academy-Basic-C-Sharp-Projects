@{
    var time = DateTime.Now;
    var msgText = "";
    if (time.Hour >= 12)
    {
        msgText = "Good Evening!";
    }
    else
    {
        msgText = "Good Morning!";
        }
        }
        <h1>@msgText</h1>

        <h2>Time at server: @time.ToLongTimeString()</h2>

        <form action="" method="post">
            <p><input type="submit" value="Update time" /></p>
        </form>